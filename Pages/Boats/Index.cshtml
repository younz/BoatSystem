@page
@model Hello_World_Razor_Page.Pages.Boats.IndexModel
@*@inject IBoatReposetory reposetory*@
@{
    ViewData["Title"] = "Index";
}
<h1>List Of Boats</h1>
<p>
    <a asp-page="CreateBoat"> Create new Boat </a>
</p>
<div>
    <form >
        <p>
            Search
            <input type ="text" asp-for="Criteria"/>
            <input type="submit" value="Filter"/>
        </p>
    </form>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            BoatID
        </th>
        <th>
            BoatName
        </th>
        <th>
            Model
        </th>

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Boats)
    {
        <tr>
            <td>
                @item.BoatId
            </td>
            <td>
                @item.BoatName
            </td>
            <td>
                @item.Model
            </td>
            <td>
                <a asp-page="EditPage" asp-route-id="@item.BoatId">Edit Boat</a>
            </td>
            <td>
                <a asp-page="DeleteBoat" asp-route-id="@item.BoatId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>